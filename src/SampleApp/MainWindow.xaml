<Window x:Class="SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApp"
        xmlns:wt="https://github.com/algel/WpfToolset"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <wt:StackGrid RowDefinitionsScript="*;[2]Auto">
        <wt:StackGrid x:Name="grid" AutogenerateRows="True" wt:StackGridHelper.ColumnDefinitionsScriptBindable="{Binding ColumnDefinitions, Mode=OneWay}"
                      ShowGridLines="True">

            <TextBlock Text="First"/>

            <TextBox Height="27"/>

        </wt:StackGrid>
        
        <Separator wt:StackGrid.StretchToLastColumn="True"/>

        <wt:StackGrid ColumnDefinitionsScript="Auto;*">
            <Label>Column definitions</Label>
            <TextBox Text="{Binding ColumnDefinitions, Mode=TwoWay}"/>
        </wt:StackGrid>
    </wt:StackGrid>
</Window>
