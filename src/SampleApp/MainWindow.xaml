<Window x:Class="SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApp"
        xmlns:awt="https://github.com/algel/WpfTools"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <awt:StackGrid RowDefinitionsScript="*;[2]Auto">
        <awt:StackGrid x:Name="grid" AutogenerateRows="True" awt:StackGridHelper.ColumnDefinitionsScriptBindable="{Binding ColumnDefinitions, Mode=OneWay}"
                      ShowGridLines="True">

            <TextBlock Text="First"/>

            <TextBox Height="27"/>

        </awt:StackGrid>
        
        <Separator awt:StackGrid.StretchToLastColumn="True"/>

        <awt:StackGrid ColumnDefinitionsScript="Auto;*">
            <Label>Column definitions</Label>
            <TextBox Text="{Binding ColumnDefinitions, Mode=TwoWay}"/>
        </awt:StackGrid>
    </awt:StackGrid>
</Window>







